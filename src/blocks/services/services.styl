.services
    &__title
        color: #383e49
        text-align: center
        padding: 30px 0

.cards
    display: flex
    flex-wrap: wrap
    &__item
        width: 277px
        height: 277px
        background-color: #fff
        margin: 15px
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        border: 1px solid #ebeef6
        border-radius: 3px
    &__img
        padding-top: 35px
        padding-bottom: 35px
        width: 100px
        height: auto
    &__text
        color: #383e49
        font-size: 20px
        text-align: center
        padding: 0 25px
        

.container
    width: 100%
    max-width 1280px
    margin: 0 auto